  <input id="name" placeholder="Name"><br>
  <input id="email" placeholder="Email"><br>
  <input id="pass" placeholder="Password" type="password"><br>
  <input id="trx" placeholder="Transaction ID"><br>
  <button onclick="signup()">Submit</button>
</div>

<div class="box" id="login" style="display:none">
  <h2>Login</h2>
  <input id="lemail" placeholder="Email"><br>
  <input id="lpass" placeholder="Password" type="password"><br>
  <button onclick="login()">Login</button>
</div>

<div class="box" id="course" style="display:none">
  <h2>Course Unlocked ðŸŽ‰</h2>
