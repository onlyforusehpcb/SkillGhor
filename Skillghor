<script>
let users=[];

function signup(){
  users.push({
    name:name.value,
    email:email.value,
    pass:pass.value,
    trx:trx.value,
    approved:false
  });
  alert("Submitted. Wait for admin approval");
  buy.style.display="none";
  login.style.display="block";
}

function login(){
  let u=users.find(x=>x.email==lemail.value && x.pass==lpass.value && x.approved);
  if(!u) return alert("Not approved yet");
  login.style.display="none";
  course.style.display="block";
}
</script>

